<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LargeTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#008000</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="LargeTextStyle.MediumTexStyle">
        <item name="android:textColor">#ffff00</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>


    </style>

    <style name="LargeTextStyle.smallTextStyle">
        <item name="android:textColor">#800000</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>


    </style>

    <style name="LargeTextStyle.ButtonStyle">
        <item name="android:textColor">#8B0000</item>
        <item name="android:textStyle">italic</item>

    </style>

    <style name="LargeTextStyle.smallButtonStyle">
    <item name="android:textColor">#A52A2A</item>
        <item name="android:textStyle">bold</item>

</style>

</resources>
