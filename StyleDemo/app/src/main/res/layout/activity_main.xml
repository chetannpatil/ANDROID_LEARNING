<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chetan.styledemo.MainActivity">

    <TextView

        android:text="@string/hello"
        style="@style/LargeTextStyle"
        android:id="@+id/textView7" />

    <TextView
        style="@style/LargeTextStyle"
        android:text="CHETAN"
        android:id="@+id/textView"
        android:layout_below="@+id/textView7"
        android:layout_alignParentEnd="true" />

    <TextView

        style="@style/LargeTextStyle"
        android:text="how are you ?"
        android:id="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chnage editetext"
        android:id="@+id/button_eidttext"
        android:nestedScrollingEnabled="false"
        android:onClick="changeEditetext"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/editText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_above="@+id/button_eidttext"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change text view"
        android:id="@+id/button_textview"
        android:layout_below="@+id/textView6"
        android:layout_alignEnd="@+id/button_eidttext"
        android:onClick="changeTextView" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New CheckBox"
        android:id="@+id/checkBox"
        android:layout_alignBottom="@+id/button_eidttext"
        android:layout_alignParentStart="true"
        android:checked="false" />

</RelativeLayout>
